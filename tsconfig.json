{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
            "ScriptHost",
        ],
        "esModuleInterop": true,
        "baseUrl": ".",
        "pretty": true,
        "paths": {
            "*": ["./node_modules/@types/*", "*"],
            "xbreader/*": ["src/app/*"],
            "@r2-opds-js/*": [
                "node_modules/r2-opds-js/dist/es5/src/*"
            ],
            "@r2-utils-js/*": [
                "node_modules/r2-utils-js/dist/es5/src/*"
            ],
            "@r2-shared-js/*": [
                "node_modules/r2-shared-js/dist/es5/src/*"
            ],
            "@r2-lcp-js/*": [
                "node_modules/r2-lcp-js/dist/es5/src/*"
            ]
        },
    },
    "include": [
        "./src/app/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}